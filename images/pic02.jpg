 <script>
  var mccdevSites = ["mccormick-dev.tech.northwestern.edu/mechanical", "mccormick-dev.tech.northwestern.edu/civil-environmental","mccormick-dev.tech.northwestern.edu/materials-science","mccormick-dev.tech.northwestern.edu/biomedical","mccormick-dev.tech.northwestern.edu/chemical-biological","mccormick-dev.tech.northwestern.edu/industrial","mccormick-dev.tech.northwestern.edu/applied-math","mccormick-dev.tech.northwestern.edu/eecs", "mccormick-dev.tech.northwestern.edu/electrical-computer", "mccormick-dev.tech.northwestern.edu/computer-science"];
  var mccSites = ["mccormick.northwestern.edu/mechanical", "mccormick.northwestern.edu/civil-environmental","mccormick.northwestern.edu/materials-science","mccormick.northwestern.edu/biomedical","mccormick.northwestern.edu/chemical-biological","mccormick.northwestern.edu/industrial","mccormick.northwestern.edu/applied-math","mccormick.northwestern.edu/eecs", "mccormick.northwestern.edu/electrical-computer", "mccormick.northwestern.edu/computer-science"];
  var mccdevProgramSites = ["mccormick-dev.tech.northwestern.edu/program-base","mccormick-dev.tech.northwestern.edu/analytics","mccormick-dev.tech.northwestern.edu/biotechnology", "mccormick-dev.tech.northwestern.edu/engineering-management", "mccormick-dev.tech.northwestern.edu/information-technology", "mccormick-dev.tech.northwestern.edu/robotics", "mccormick-dev.tech.northwestern.edu/project-management","mccormick-dev.tech.northwestern.edu/executive-management-design-construction","mccormick-dev.tech.northwestern.edu/theoretical-applied-mechanics","mccormick-dev.tech.northwestern.edu/predictive-science-engineering-design", "mccormick-dev.tech.northwestern.edu/artificial-intelligence"];
  var mccProgramSites = ["mccormick.northwestern.edu/analytics","mccormick.northwestern.edu/biotechnology", "mccormick.northwestern.edu/engineering-management", "mccormick.northwestern.edu/information-technology", "mccormick.northwestern.edu/robotics", "mccormick.northwestern.edu/project-management", "mccormick.northwestern.edu/executive-management-design-construction","mccormick.northwestern.edu/theoretical-applied-mechanics","mccormick.northwestern.edu/predictive-science-engineering-design", "mccormick.northwestern.edu/artificial-intelligence"];
  var mccdevDivisionSites = ["mccormick-dev.tech.northwestern.edu/eecs/computer-science","mccormick-dev.tech.northwestern.edu/eecs/electrical-engineering","mccormick-dev.tech.northwestern.edu/eecs/computer-engineering"];
  var mccDivisionSites = ["mccormick.northwestern.edu/eecs/computer-science","mccormick.northwestern.edu/eecs/electrical-engineering","mccormick.northwestern.edu/eecs/computer-engineering"];
  var allDivisionSites = mccdevDivisionSites.concat(mccDivisionSites);
  var allmccSites = mccdevSites.concat(mccSites);

  for (var s in allmccSites){
  /* for each McCormick department site, live and dev, in the array, check if it is the root of the referrer link so included functions only run once for the case it matches. 
  When that is the case, check if the referring link is from a division site. If it is, run the division back link function. If it's not run the department link function.  */
   if (document.referrer.indexOf(allmccSites[s]) != -1){
      
   		buildDeptBackLink(allmccSites[s]);
      
   }
  }

  for (var s in mccdevProgramSites){
    buildProgramBackLink(mccdevProgramSites[s]);
    /* The build program link function now runs for every site url root in the array, even though the if statements only execute for the one url that matches the referrer. May need to insert qualifier like in loop above. */
  }

  for (var s in mccProgramSites){
    buildProgramBackLink(mccProgramSites[s]);
  }

function buildDeptBackLink(mccWebsite){
 
        if ((isReferrerFromPeople(mccWebsite) && isThisNewsArticle()) ||
        	(isReferrerFromNews(mccWebsite) && isThisNewsArticle()) ||
        	(isReferrerFromDeptOrPrgrm(mccWebsite) && isThisNewsArticle())
		   ){ $('.title-container').prepend(
          "<a id=\"back-to-dept-desktop\" href=\"" + document.referrer + "\">Back to Department</a><a id=\"back-to-dept-480\" href=\"" + document.referrer + "\"></a><a id=\"back-to-dept-mobile\" href=\"" + document.referrer + "\">Back</a>");
           $('.news-link').hide();
           
      } else if (isReferrerFromPeople(mccWebsite)){
        $('#main-content').prepend("<div id=\"back-to-dept\"><a href=\"" + document.referrer + "\">Back to Department Faculty</a></div>");
        $('#main-content div:last').before("<div id=\"back-to-dept\" class=\"second-back\"><a href=\"" + document.referrer + "\">Back to Department Faculty</a></div>");
      
      } else if (isReferrerFromDeptOrPrgrm(mccWebsite)  && isThisFacProfile()){
        $('#main-content').prepend("<div id=\"back-to-dept\"><a href=\"" + document.referrer + "\">Back to Department</a></div>");
        $('#main-content div:last').before("<div id=\"back-to-dept\" class=\"second-back\"><a href=\"" + document.referrer + "\">Back to Department</a></div>");
      
      } else if (isReferrerFromNews(mccWebsite) /* && !isReferrerFromEECS() && !isThisEECS() */){
        $('#main-content').prepend("<div id=\"back-to-dept\"><a href=\"" + document.referrer + "\">Back to Department News</a></div>");
        $('#main-content').append("<div id=\"back-to-dept\" class=\"second-back\"><a href=\"" + document.referrer + "\">Back to Department News</a></div>");

      } else if (isReferrerFromDeptOrPrgrm(mccWebsite) /* && !isReferrerFromEECS() && !isThisEECS() */){
          $('#main-content').prepend("<div id=\"back-to-dept\"><a href=\"" + document.referrer + "\">Back to Department</a></div>");
          $('#main-content').append("<div id=\"back-to-dept\" class=\"second-back\"><a href=\"" + document.referrer + "\">Back to Department</a></div>");
      }  
}

function buildProgramBackLink(mccWebsite){

        if ((isReferrerFromFaculty(mccWebsite) && isThisNewsArticle()) ||
            (isReferrerFromNews(mccWebsite) && isThisNewsArticle()) ||
            (isReferrerFromDeptOrPrgrm(mccWebsite) && isThisNewsArticle())
		   ){ $('.title-container').prepend(
          "<a id=\"back-to-dept-desktop\" href=\"" + document.referrer + "\">Back to Department</a><a id=\"back-to-dept-480\" href=\"" + document.referrer + "\"></a><a id=\"back-to-dept-mobile\" href=\"" + document.referrer + "\">Back</a>");
          $('.news-link').hide();
          
      } else if (isReferrerFromFaculty(mccWebsite)){
        $('#main-content').prepend("<div id=\"back-to-dept\"><a href=\"" + document.referrer + "\">Back to Program Faculty</a></div>");
        $('#main-content div:last').before("<div id=\"back-to-dept\" class=\"second-back\"><a href=\"" + document.referrer + "\">Back to Program Faculty</a></div>");
      
      } else if (isReferrerFromDeptOrPrgrm(mccWebsite)  && isThisFacProfile()){
        $('#main-content').prepend("<div id=\"back-to-dept\"><a href=\"" + document.referrer + "\">Back to Program</a></div>");
        $('#main-content div:last').before("<div id=\"back-to-dept\" class=\"second-back\"><a href=\"" + document.referrer + "\">Back to Program</a></div>");
      
      } else if (isReferrerFromNews(mccWebsite) /* && !isThisEECSNews() */){
        $('#main-content').prepend("<div id=\"back-to-dept\"><a href=\"" + document.referrer + "\">Back to Program News</a></div>");
        $('#main-content').append("<div id=\"back-to-dept\" class=\"second-back\"><a href=\"" + document.referrer + "\">Back to Program News</a></div>");

      } else if (isReferrerFromDeptOrPrgrm(mccWebsite) /* && !isThisEECSNews() */){

          $('#main-content').prepend("<div id=\"back-to-dept\"><a href=\"" + document.referrer + "\">Back to Program</a></div>");
          $('#main-content').append("<div id=\"back-to-dept\" class=\"second-back\"><a href=\"" + document.referrer + "\">Back to Program</a></div>");
      }  
}
  
   function isThisFacProfile(){
      return window.location.href.indexOf("/research-faculty/directory/") != -1;
   }     

   function isThisNewsArticle(){
      if (window.location.href.indexOf("/news/articles") != -1 /* && window.location.href.indexOf("eecs/news/articles") == -1 */ ){
        return true;
      };
   }

   function isReferrerFromPeople(mccWebsite){
      return document.referrer.indexOf(mccWebsite + "/people") != -1;  
   }

   function isReferrerFromFaculty(mccWebsite){
      return document.referrer.indexOf(mccWebsite + "/faculty") != -1;
   }

   function isReferrerFromNews(mccWebsite){
      if((document.referrer.indexOf(mccWebsite + "/news") != -1) || (document.referrer.indexOf(mccWebsite + "/inside-our-program") != -1)){
	      return true;
      }  else {
	      return false;
      }
   }

   function isReferrerFromDeptOrPrgrm(mccWebsite){
      return document.referrer.indexOf(mccWebsite) != -1;
   }
</script>   
   
